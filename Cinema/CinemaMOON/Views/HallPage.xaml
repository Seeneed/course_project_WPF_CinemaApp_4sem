                                    2,<Run Text="{DynamicResource HallPage_ToolTip_Seat}" />
                                    12</TextBlock>
                            </Border.ToolTip>
                        </Border>
                    </StackPanel>
                    <StackPanel Margin="0,5" Orientation="Horizontal">
                        <Border Background="Red" Style="{StaticResource LoveSeatStyle}">
                            <Border.ToolTip>
                                <TextBlock><Run Text="{DynamicResource HallPage_ToolTip_Row}" />
                                    3,<Run Text="{DynamicResource HallPage_ToolTip_Seats}" />
