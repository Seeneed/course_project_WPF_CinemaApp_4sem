                                    3,<Run Text="{DynamicResource HallPage_ToolTip_Seats}" />
                                    11-12</TextBlock>
                            </Border.ToolTip>
                        </Border>
                    </StackPanel>
                    <StackPanel
                        Margin="0,5"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Border Background="Blue" Style="{StaticResource ReclinerStyle}">
                            <Border.ToolTip>
                                <TextBlock><Run Text="{DynamicResource HallPage_ToolTip_Row}" />
                                    4,<Run Text="{DynamicResource HallPage_ToolTip_Seat}" />
