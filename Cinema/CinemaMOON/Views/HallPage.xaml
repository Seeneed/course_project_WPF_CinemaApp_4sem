            Grid.Row="0"
            Margin="0,10,0,20"
            HorizontalAlignment="Center"
            FontSize="30"
            FontWeight="Bold"
            Foreground="#D7B472"
            Text="{DynamicResource HallPage_Title}" />

        <Grid Grid.Row="1" Margin="0,0,0,0">
