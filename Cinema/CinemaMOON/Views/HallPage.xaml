<Page
    x:Class="CinemaMOON.Views.HallPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CinemaMOON.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:CinemaMOON.ViewModels"
    Title="HallPage"
    d:DesignHeight="900"
    d:DesignWidth="1400"
    Background="{DynamicResource PageBackgroundColor}"
    Foreground="White"
    mc:Ignorable="d">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />

        <Style x:Key="SliderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#D7B472" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="42" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FFD700" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SeatStyle" TargetType="Border">
            <Setter Property="Width" Value="26" />
            <Setter Property="Height" Value="26" />
            <Setter Property="Margin" Value="3" />
            <Setter Property="CornerRadius" Value="3" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style
            x:Key="SofaStyle"
            BasedOn="{StaticResource SeatStyle}"
            TargetType="Border">
            <Setter Property="Width" Value="58" />
        </Style>
        <Style
            x:Key="LoveSeatStyle"
            BasedOn="{StaticResource SeatStyle}"
            TargetType="Border">
            <Setter Property="Width" Value="58" />
        </Style>
        <Style
            x:Key="ReclinerStyle"
            BasedOn="{StaticResource SeatStyle}"
            TargetType="Border" />
        <Style
            x:Key="StandardSeatStyle"
            BasedOn="{StaticResource SeatStyle}"
            TargetType="Border" />

        <Style
            x:Key="LegendStandardSeatStyle"
            BasedOn="{StaticResource StandardSeatStyle}"
            TargetType="Border">
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Margin" Value="3,0,10,0" />
        </Style>
        <Style
            x:Key="LegendLoveSeatStyle"
            BasedOn="{StaticResource LoveSeatStyle}"
            TargetType="Border">
            <Setter Property="Width" Value="60" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Margin" Value="3,0,10,0" />
        </Style>
        <Style
            x:Key="LegendReclinerStyle"
            BasedOn="{StaticResource ReclinerStyle}"
            TargetType="Border">
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Margin" Value="3,0,10,0" />
        </Style>
        <Style
            x:Key="LegendSofaStyle"
            BasedOn="{StaticResource SofaStyle}"
            TargetType="Border">
            <Setter Property="Width" Value="60" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Margin" Value="3,0,10,0" />
        </Style>

        <Style x:Key="AisleSpacerStyle" TargetType="Border">
            <Setter Property="Width" Value="26" />
            <Setter Property="Height" Value="26" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="LegendItemStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,8,0,8" />
        </Style>

        <Style x:Key="LegendTextStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Foreground" Value="#CCCCCC" />
        </Style>
        <Style
            x:Key="LegendTitleStyle"
            BasedOn="{StaticResource LegendTextStyle}"
            TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="0,-2,0,2" />
        </Style>
    </Page.Resources>

