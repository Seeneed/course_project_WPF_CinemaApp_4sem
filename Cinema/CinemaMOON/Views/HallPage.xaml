                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="SemiBold"
                Foreground="White"
                Text="{Binding CurrentHallTitle}" />
            <Button
                Grid.Column="2"
                VerticalAlignment="Center"
                Command="{Binding NextCommand}"
                Content="→"
                Style="{StaticResource SliderButtonStyle}" />
        </Grid>

