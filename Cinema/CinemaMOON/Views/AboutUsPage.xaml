<Page
    x:Class="CinemaMOON.Views.AboutUsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CinemaMOON.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="AboutUsPage"
    d:DesignHeight="900"
    d:DesignWidth="1400"
    Background="{DynamicResource PageBackgroundColor}"
    Foreground="White"
    mc:Ignorable="d">

    <Grid>
        <Grid Margin="30,20,30,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" MinHeight="300" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,15"
                HorizontalAlignment="Center"
                FontSize="30"
                FontWeight="Bold"
                Foreground="#D7B472"
                Text="{DynamicResource AboutUsPage_PageTitle}" />

            <TextBlock
                Grid.Row="1"
                Margin="0,0,0,10"
                FontSize="22"
                LineHeight="22"
                Text="{DynamicResource AboutUsPage_Description1}"
                TextWrapping="Wrap" />

            <TextBlock
                Grid.Row="2"
                Margin="0,0,0,25"
                FontSize="22"
                LineHeight="22"
                Text="{DynamicResource AboutUsPage_Description2}"
                TextWrapping="Wrap" />

            <TextBlock
                Grid.Row="4"
                Margin="0,0,0,5"
                FontSize="24"
                FontWeight="SemiBold"
                Foreground="#D7B472"
                Text="{DynamicResource AboutUsPage_AddressTitle}" />

            <TextBlock
                Grid.Row="5"
                Margin="0,0,0,25"
                FontSize="22"
                Text="{DynamicResource AboutUsPage_AddressText}" />

            <TextBlock
                Grid.Row="6"
                Margin="0,0,0,10"
                FontSize="24"
                FontWeight="SemiBold"
                Foreground="#D7B472"
                Text="{DynamicResource AboutUsPage_MapTitle}" />

            <Border
                Grid.Row="7"
                Background="#101010"
                BorderBrush="#444"
                BorderThickness="1"
                CornerRadius="3">
                <wv2:WebView2
                    Name="webView"
                    Margin="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
            </Border>

            <TextBlock
                Grid.Row="8"
                Margin="0,5,0,0"
                VerticalAlignment="Top"
                FontSize="16"
                FontStyle="Italic"
                Foreground="Gray"
                Text="{DynamicResource AboutUsPage_MapNote}"
                TextWrapping="Wrap" />
        </Grid>
    </Grid>
</Page>